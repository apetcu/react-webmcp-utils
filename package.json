{
  "name": "react-webmcp-utils",
  "version": "0.1.1",
  "description": "React 18+ hooks for the W3C WebMCP (navigator.modelContext) polyfill",
  "homepage": "https://github.com/apetcu/react-webmcp-utils",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apetcu/react-webmcp-utils.git"
  },
  "bugs": {
    "url": "https://github.com/apetcu/react-webmcp-utils/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "webmcp",
    "mcp",
    "model-context-protocol",
    "react",
    "hooks",
    "ai-agent",
    "navigator.modelContext"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "@adipetcu/webmcp-polyfill": "^0.1.0"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "devDependencies": {
    "@types/react": "^19.2.14",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
